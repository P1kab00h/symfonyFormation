            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sujet_new') }}" class="btn shadow-1 rounded-1 outline opening txt-">Create new</a>

        </div>
    </div>
</div>
{% endblock %}
