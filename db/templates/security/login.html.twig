{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="grix xs4 sm2 gutter-xs4 container">
    <div class="card shadow-1 rounded-3">
        <div class="card-content xs4">
            <div class="card-header xs4"><h1>Connexion utilisateur</h1></div>


<form method="post">
    {% if error %}
        <div class="alert alert-danger xs1">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="xs1">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal xs4">Connectez-vous</h1>
    <label for="inputEmail" class="xs1">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control xs1" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control xs1" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn shadow-1 rounded-1 outline opening txt-blue" type="submit"><span class="outline-text">Connexion</span></button>
</form>
        </div>
    </div>
</div>
{% endblock %}





